<h1>Listing Hours</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Hour</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hours.each do |hour| %>
      <tr>
        <td><%= date_to_dateformat(hour.date) %></td>
        <td><%= date_to_hour(hour.date) %></td>
        <td><%= hour.description %></td>
        <td><%= link_to 'Show', hour %></td>
        <td><%= link_to 'Edit', edit_hour_path(hour) %></td>
        <td><%= link_to 'Destroy', hour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

